{{#section 'title'}}
	Detail
{{/section}}

{{#with product}}
<div class="row">
	<div class="col-md-12">
		<img src="/imgs/sp/{{ProID1}}/main.jpg" />
	</div>
	<div class="col-md-12 caption-lg-orange">
		<h3>{{ProName1}}</h3>
	</div>
	<div class="col-md-12 padding">
		<span class="caption-lg-red">Giá bán: {{number_format Price1}}</span>
	</div>
	<div class="col-md-12 padding">
		Tồn kho: {{Quantity1}}
		<br>
		{{ProNXB1}}
		<br>
		{{ProKind1}}
	</div>
	<div class="col-md-12 padding">
		{{{FullDes1}}}
	</div>
</div>
{{/with}}

{{#if layoutVM.isLogged}}
<form class="form-horizontal" id="frmAddItem" method="post" action="/cart/add">
    <div class="form-group">
        <div class="col-sm-4">
            <div class="input-group" style="margin-left: 24px;">
                <input name="proId" type="hidden" value="{{product.ProID}}">
                <input id="txtQ" name="quantity" type="text" class="form-control" placeholder="Slg" value="1">
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="submit">
                        <span class="glyphicon glyphicon-plus"></span>
                    </button>
                </span>
            </div>
        </div>
    </div>
</form>
{{/if}}