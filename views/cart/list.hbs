{{#section 'title'}}
	Quản lý đơn hàng
{{/section}}

{{#if layoutVM.isLogged1}}
<table class="table table-hover">
	<thead>
		<tr>
			<th>Mã đơn hàng</th>
			<th>Ngày</th>
			<th>Mã tài khoản</th>
			<th>Tên tài khoản</th>
			<th>Tồng tiền</th>
		</tr>
	</thead>
	<tbody>
		{{#each cart}}
		<tr>
			<td>{{OrderID}}</td>
			<td>{{OrderDate}}</td>
			<td>{{UserID}}</td>
			<td>{{Username}}</td>
			<td>{{Total}}</td>
			<td class="text-right">
				<a class="btn btn-danger btn-xs" href="/category/delete?id={{ProID1}}" role="button">
					<span class="glyphicon glyphicon-remove"></span>
				</a>
				<a class="btn btn-primary btn-xs" href="/cart/byMenu/{{OrderID}}" role="button">
					<span class="glyphicon glyphicon-wrench"></span>
				</a>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>

<a class="btn btn-large btn-block btn-primary" href="/cart/list" role="button" style="background-color: #286090">
	<span class="glyphicon glyphicon-share-alt"></span>
	Quay lại
</a>

{{else}}
	<div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>Thông báo!</strong> Bạn không có quyên truy cập
</div>
{{/if}}







