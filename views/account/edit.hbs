{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/assets/bootstrap-datepicker/css/bootstrap-datepicker3.min.css"> {{/section}} {{#section 'js'}}
<script src="/assets/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">
    $('#txtDOB').datepicker({
        format: 'd/m/yyyy',
        autoclose: true
    });
    }
</script> {{/section}}

{{#if layoutVM.isLogged1}}
<form action="" method="POST" role="form" class="form-manager">
    {{#each account}}
	<div class="form-group">
		<label for="">#</label>
		<input type="text" class="form-control" id="" name="ID" value="{{f_ID}}" readonly>
	</div>
	<div class="form-group">
		<label for="">Tên tài khoản</label>
		<input type="text" class="form-control" id="" name="Username" value="{{f_Username}}">
	</div>
    <div class="form-group">
		<label for="">Họ và tên</label>
		<input type="text" class="form-control" id="" name="Name" value="{{f_Name}}">
	</div>
    <div class="form-group">
		<label for="">Email</label>
		<input type="email" class="form-control" id="" name="Email" value="{{f_Email}}">
	</div>
	<button type="submit" class="btn btn-default save">
		<span class="glyphicon glyphicon-save"></span>
		Update
	</button>
    {{/each}}
    <a class="btn btn-default view" href="/account/profile/{{layoutVM.curUser.f_ID}}" role="button">
		<span class="glyphicon glyphicon-arrow-left"></span>
		View list
	</a>
</form>
{{else}}
	<div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>Thông báo!</strong> Bạn không có quyên truy cập
</div>
{{/if}}
