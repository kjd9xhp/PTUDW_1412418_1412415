{{#section 'title'}} Đăng nhập {{/section}} {{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/css/login.css"> {{/section}} 


{{#if showError}}
<div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>Thông báo!</strong> {{errorMsg}}
</div>
{{/if}}

{{#if layoutVM.isLogged}}
<div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>Thông báo!</strong> Bạn không có quyên truy cập
</div>

{{else}}
<div class="col-md-6 col-md-offset-3">
    <p style="text-align: center;">
        <span>Chưa có tài khoản?</span>
        <a href="/account/register" class="sub-login">Đăng ký ngay</a>
    </p>
    <div class="login-box">
        <form class="form-horizontal" method="post" action="" id="frmLogin">
            <div class="form-group">
                <label for="txtUsername">Tên đăng nhập</label>
                <input type="text" class="form-control" id="txtUsername" placeholder="Tên đăng nhập" name="username">
            </div>
            <div class="form-group">
                <label for="txtPWD">Password</label>
                <input type="password" class="form-control" id="txtPWD" placeholder="Password" name="rawPWD">
            </div>
            <div class="form-group">
                <label style="font-weight: lighter;">
                    <input type="checkbox" name="remember"> Ghi nhớ
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default signin">Đăng nhập</button>
            </div>
        </form>
    </div>
</div>
{{/if}}
