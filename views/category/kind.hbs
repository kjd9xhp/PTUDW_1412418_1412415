{{#section 'title'}}
	Quản lý loại sản phẩm
{{/section}}

{{#if layoutVM.isLogged1}}
<table class="table table-hover">
	<thead>
		<tr>
			<th class="col-md-1">#</th>
			<th>Thể loại</th>
		</tr>
	</thead>
	<tbody>
		{{#each categories}}
		<tr>
			<td>{{KindID}}</td>
			<td>{{KindName}}</td>
		</tr>
		{{/each}}
	</tbody>
</table>

<a class="btn btn-large btn-block btn-primary" href="/category" role="button" style="background-color: #286090">
	<span class="glyphicon glyphicon-share-alt"></span>
	Quay lại
</a>

{{else}}
	<div class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <strong>Thông báo!</strong> Bạn không có quyên truy cập
</div>
{{/if}}
